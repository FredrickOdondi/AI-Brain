  "autoApprovalRules": {
    "requireManualReview": {
      "conditions": [
        {
          "field": "confidence",
          "operator": "lessThan",
          "value": 0.6
        },
        {
          "field": "profitProjection.estimatedProfit",
          "operator": "lessThan",
          "value": 30000
        },
        {
          "field": "profitProjection.riskLevel",
          "operator": "equals",
          "value": "high"
        },
        {
          "field": "redFlags.length",
          "operator": "greaterThan",
          "value": 2
        }
      ]
    },

    "autoApprove": {
      "conditions": [
        {
          "field": "confidence",
          "operator": "greaterThanOrEqual",
          "value": 0.7
        },
        {
          "field": "profitProjection.estimatedProfit",
          "operator": "greaterThanOrEqual",
          "value": 30000
        },
        {
          "field": "profitProjection.riskLevel",
          "operator": "in",
          "value": ["low", "medium"]
        },
        {
          "field": "validation.passedCriteria",
          "operator": "equals",
          "value": true
        }
      ]
    },

    "reject": {
      "conditions": [
        {
          "field": "profitProjection.estimatedProfit",
          "operator": "lessThan",
          "value": 15000
        },
        {
          "field": "confidence",
          "operator": "lessThan",
          "value": 0.3
        }
      ]
    }
  },

